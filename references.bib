	journaltitle = {Food and Bioprocess Technology},
	author = {Filho, Elenilson G. Alves and Mara, Lorena and Silva, A. and Brito, Edy S. De and Castro, Débora R. G. and Bezerra, Jaqueline A. and Sanches, Edgar A. and Rodrigues, Sueli and Fernandes, Fabiano A. N. and Campelo, Pedro Henrique},
