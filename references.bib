@article{geana_application_2019,
	title = {Application of Spectroscopic {UV}-Vis and {FT}-{IR} Screening Techniques Coupled with Multivariate Statistical Analysis for Red Wine Authentication: Varietal and Vintage Year Discrimination},
	volume = {24},
	rights = {https://creativecommons.org/licenses/by/4.0/},
	issn = {1420-3049},
