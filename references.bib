	issn = {0308-8146},
	url = {https://www-scopus-com.docelec.u-bordeaux.fr/record/display.uri?eid=2-s2.0-85184140659&origin=resultslist&sort=plf-f&src=s&sid=481f8e8864a8eaee22c844410681f1c5&sot=b&sdt=b&s=TITLE-ABS-KEY%28Analysis+of+targeted+phenolic+ageing+markers+in+Syrah+red+wines+during+bottle+ageing%3A+Influence+of+cork+oxygen+transfer+rate%29&sl=139&sessionSearchId=481f8e8864a8eaee22c844410681f1c5&relpos=0},
