	journaltitle = {{BIO} Web of Conferences},
	shortjournal = {{BIO} Web Conf.},
	author = {Ivlev, Vasilii and Vasil’ev, Vasilii and Kolesnov, Alexander and Tsimbalaev, Sergey and Sheremeta, Anzhelika and Nasser, Raudas and Lamerdonova, Fatima and Esparza, Cesar Augusto and Anikina, Nadezhda and Gnilomedova, Nonna and Gerzhikova, Viktoria and Cherviak, Sofiya},
	editor = {Roca, P.},
