	url = {https://www-scopus-com.docelec.u-bordeaux.fr/record/display.uri?eid=2-s2.0-85130247153&origin=resultslist&sort=plf-f&src=s&sid=c7c7c71308dfbb21b65cc75b7db35744&sot=b&sdt=b&s=TITLE-ABS-KEY%28Bottle+Aging+Affected+Aromatic+and+Phenolic+Wine+Composition+More+than+Yeast+Starter+Strains%29&sl=107&sessionSearchId=c7c7c71308dfbb21b65cc75b7db35744&relpos=0},
