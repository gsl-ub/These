@article{canuti_multivariate_2017,
	title = {A Multivariate Methodological Approach to Relate Wine to Characteristics of Grape Composition: The Case of Typicality},
	volume = {68},
	issn = {0002-9254},
	url = {http://www.ajevonline.org/lookup/doi/10.5344/ajev.2016.15111},
