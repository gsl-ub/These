	journaltitle = {Journal of Pharmaceutical and Biomedical Analysis},
	author = {Bitar, Tania and Mavel, Sylvie and Emond, Patrick and Nadal-Desbarats, Lydie and Lefèvre, Antoine and Mattar, Hanna and Soufia, Michel and Blasco, Hélène and Vourc'h, Patrick and Hleihel, Walid and Andres, Christian R.},
