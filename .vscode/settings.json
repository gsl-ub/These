{
  "latex-workshop.latex.tools": [
    {
      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-interaction=nonstopmode",
        "-synctex=1",
        "%DOC%"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "XeLaTeX",
      "tools": ["xelatex"]
    }
  ],
  "latex-workshop.latex.autoBuild.run": "never", // empêche la compilation automatique
  "latex-workshop.latex.outDir": "./out",       // dossiers de sortie (modulable)
  "latex-workshop.view.pdf.viewer": "tab"       // prévisualisation intégrée
}